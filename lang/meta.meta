meta meta {
  grammar    = "meta" _ name _? '{' rule+ _? '}',
  
  rule       = _? name _ '=' _ expression ',',
  
  name       = '_' | letter (letter | digit)*,
  
  expression = choice,
  
  choice     = sequence (_ '|' sequence)*,
  
  sequence   = labeled+ action?,
  
  labeled    = _? (prefixed ':' name | prefixed),
  
  prefixed   = '&' suffixed
             | '~' suffixed
             | suffixed,
  
  suffixed   = primary '?'
             | primary '+'
             | primary '*'
             | primary,
            
  primary    = name
             | literal
             | litseq
             | group,
  
  group      = '(' expression _? ')',
  
  action     = "->" (~"<-" char)* "<-",
}
