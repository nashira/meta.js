meta meta {
  grammar    = 'meta' name '{' rule+ '}',
  
  rule       = name '=' expression ',',
  
  name       = letter (letter | digit)* { [_1].concat(_2) },
  
  expression = choice,
  
  choice     = sequence ('|' sequence)*,
  
  sequence   = prefixed+ action
             | prefixed+,
  
  prefixed   = '&' suffixed
             | '~' suffixed
             | suffixed,
  
  suffixed   = primary '?'
             | primary '+'
             | primary '*'
             | primary,
            
  primary    = name
             | literal
             | '(' expression ')',
  
  action     = '{' (~'}' char)* '}',
}
