meta meta {
  grammar    = 'meta' name '{' rule+ '}',
  
  rule       = name '=' expression ',',
  
  name       = letter (letter | digit)*,
  
  expression = choice,
  
  choice     = sequence ('|' sequence)*,
  
  sequence   = prefixed+,
  
  prefixed   = '&' suffixed
             | '~' suffixed
             | suffixed,
  
  suffixed   = primary '?'
             | primary '+'
             | primary '*'
             | primary,
            
  primary    = name
             | literal
             | '(' expression ')',
}
