meta meta {
  grammar   = 'meta' name '{' rule+ '}',
  
  rule      = name '=' expr ',',
  
  nameEnd   = letter | digit,
  
  name      = letter nameEnd*,
  
  expr      = choice
            | seq
            | plus
            | star,
            
  exprLeaf  = name
            | literal,
  
  plus      = exprLeaf '+',
  
  star      = exprLeaf '*',
  
  expr1     = plus
            | star
            | exprLeaf,
  
  seq       = expr1+,
  
  choice1   = '|' seq,
  
  choice    = seq choice1+,
}
